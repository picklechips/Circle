<h4>Edit Post</h4>
<div class="row">
	<form action="/posts/{{post.id}}?_method=PUT" method="post" class="col s12">
		<input type="hidden" name="_method" value="PUT">
		<div class="row">
			<div class="input-field">
				<input type="text" value="{{post.title}}" name="title">
				<label for="title">Title</label>
			</div>
		</div>

		<div class="row">
			<div class="input-field">
				<select name="status">
					{{#select post.status}}
					<option value="public" selected="true">Public</option>
					<option value="private">Private</option>
					{{/select}}
				</select>
				<label for="status">Status</label>
			</div>
		</div>

		<div class="row">
			<div class="input-field">
				<h5>Enter text</h5>
				<textarea id="ckeditor" name="body">{{post.body}}</textarea>
			</div>
		</div>

		<input type="submit" value="Save" class="btn red">
	</form>
</div>