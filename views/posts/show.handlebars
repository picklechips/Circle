<div class="row">
	<div class="col s12 m8">
		<h3>{{post.title}}</h3>
		<div class="card post">
			<div class="card-content">
				<span class="card-title">{{formatDate post.createdAt 'MMMM Do YYYY'}}</span>
				{{{post.body}}}
			</div>
		</div>
	</div>
	<div class="col s12 m4">
		<div class="card center-align">
			<div class="card-content">
				<span class="card-title">{{post.user.firstName}} {{post.user.lastName}}</span>
				<img src="/img/default-user.png" class="circle responsive-img">
			</div>
			<div class="card-action">
				<a href="posts/user/{{post.user.id}}">More from {{post.user.firstName}}</a>
			</div>
		</div>
	</div>
</div>